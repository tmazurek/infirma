<div class="dashboard-greeting">
  <div class="greeting-text">
    <h1>Liczy się Twój biznes</h1>
    <span class="greeting-emoji">👋</span>
  </div>
  <div class="action-buttons">
    <a href="/expenses" class="action-button primary">
      <i class="fas fa-plus"></i> Dodaj nowy koszt
    </a>
    <button class="action-button">
      <i class="fas fa-ellipsis-h"></i>
    </button>
  </div>
</div>

<div class="dashboard-grid">
  <div class="card">
    <div class="card-header">
      <h2>Stan konta</h2>
      <i class="fas fa-ellipsis-h"></i>
    </div>
    <div class="card-body">
      <div class="finance-item">
        <div>
          <div class="finance-item-title">Saldo</div>
        </div>
        <div class="finance-item-amount">0,00 PLN</div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h2>Podatki i ZUS</h2>
      <button class="btn-sm btn-outline">Opłać z inFakt</button>
    </div>
    <div class="card-body">
      <div class="finance-item">
        <div>
          <div class="finance-item-title">ZUS za bieżący miesiąc</div>
          <div class="finance-item-details">Składki społeczne, zdrowotne</div>
        </div>
        <div class="finance-item-amount">1 518,98 PLN</div>
      </div>
      <div class="finance-item">
        <div>
          <div class="finance-item-title">Ryczałt za bieżący miesiąc</div>
          <div class="finance-item-details">12% od przychodu</div>
        </div>
        <div class="finance-item-amount">4 755,00 PLN</div>
      </div>
      <div class="finance-item">
        <div>
          <div class="finance-item-title">VAT za bieżący miesiąc</div>
          <div class="finance-item-details">23% stawka podstawowa</div>
        </div>
        <div class="finance-item-amount">8 980,00 PLN</div>
      </div>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-between align-center">
        <span class="text-success">
          <i class="fas fa-check-circle"></i> Wszystko opłacone! inFaktu tak dalej
        </span>
        <i class="fas fa-thumbs-up text-primary"></i>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h2>Lista przychodów</h2>
      <div class="d-flex align-center gap-10">
        <span>Wymagające uwagi</span>
        <label class="switch">
          <input type="checkbox" checked>
          <span class="slider round"></span>
        </label>
      </div>
    </div>
    <div class="card-body">
      <ul class="document-list">
        <% invoices.forEach(invoice => { %>
          <li class="document-item">
            <div class="document-info">
              <div class="document-title"><%= invoice.client_name %></div>
              <div class="document-date"><%= invoice.issue_date %><%= invoice.status === 'Draft' ? ' • Wysłano' : '' %></div>
            </div>
            <div>
              <span class="status-badge <%= invoice.status === 'Paid' ? 'paid' : 'unpaid' %>">
                <%= invoice.status === 'Paid' ? 'ZAPŁACONO' : 'NIE ZAPŁACONO' %>
              </span>
              <div class="document-amount"><%= invoice.total_gross.toFixed(2) %> PLN</div>
            </div>
          </li>
        <% }); %>
      </ul>
    </div>
    <div class="card-footer">
      <a href="/invoices" class="text-primary">Zobacz wszystkie faktury <i class="fas fa-arrow-right"></i></a>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h2>Wsparcie techniczne</h2>
      <i class="fas fa-ellipsis-h"></i>
    </div>
    <div class="card-body d-flex align-center">
      <img src="https://via.placeholder.com/60x60/0078d4/ffffff?text=S" alt="Support" style="border-radius: 50%; margin-right: 15px;">
      <div>
        <h3 style="margin: 0 0 5px 0;">Specjaliści inFaktu</h3>
        <p style="margin: 0;">Masz pytanie? Skontaktuj się z nami!</p>
        <button class="btn-sm btn-outline mt-3">
          <i class="fas fa-comment"></i> Rozpocznij czat
        </button>
      </div>
    </div>
  </div>
</div>
